pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'appsecco/owasp-webgoat-dot-net'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from the repository
                git branch: 'main', url: 'https://github.com/vamsi676/DotNet'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    bat 'docker build -t %DOCKER_IMAGE% .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop and remove any existing container with the same name
                    bat '''
                    docker ps -a -q --filter "name=webgoat" | findstr . && docker rm -f webgoat || echo "Container not found"
                    '''

                    // Run the Docker container
                    bat 'docker run --name webgoat -it -p 9000:9000 -d %DOCKER_IMAGE%'
                }
            }
        }
    }

    post {
        always {
            script {
                // Clean up by removing the Docker image if needed
                // Uncomment the following line if you want to remove the image after running the container
                // bat 'docker rmi %DOCKER_IMAGE%'
            }
        }
    }
}
